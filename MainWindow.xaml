<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSBeverageRecordApp"
        xmlns:VisualBasic="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core" x:Class="MSBeverageRecordApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="890" WindowStartupLocation="CenterScreen">
    <Grid>

        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left" Width="890">
            <MenuItem Header="_File">

                <MenuItem x:Name="muiSave" Header="_Save" Click="muiSave_Click"/>

            </MenuItem>

        </Menu>
        <DataGrid x:Name="MSBeverageRecordApp" Margin="51,97,51,150" IsReadOnly="False" CanUserAddRows="False">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Label  FontSize="22px" Content="Mississippi Beverage Records" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="47" Width="300"/>
        <Button x:Name="btnaddRecord" Content="New Record" HorizontalAlignment="Left" Margin="740,56,0,0" VerticalAlignment="Top" Click="addRecord" Height="23" Width="74"/>
        <Button x:Name="btnSave" Content="Save Changes" HorizontalAlignment="Left" Margin="600,56,0,0" VerticalAlignment="Top" Height="23" Width="74" Click="btnSave_Click"/>
        <TextBox x:Name="consoleOutput" HorizontalAlignment="Center" Margin="0,409,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="654" />
        <ComboBox x:Name="Filter" Margin="51,56,609,380">
            <ComboBoxItem Content="Select a Filter" IsSelected="True"/>
            <ComboBoxItem Content="Category 1" />
            <ComboBoxItem Content="Category 2" />
            <ComboBoxItem Content="Category 3" />
            <ComboBoxItem Content="Category 4" />
            <ComboBoxItem Content="Category 5" />
        </ComboBox>



    </Grid>
</Window>
