<Page x:Class="MSBeverageRecordApp.CategoryTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MSBeverageRecordApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryTable">

    <Grid Background="#FFFBF6F6">
        <Button Content="Create Category" HorizontalAlignment="Left" Margin="539,105,0,0" VerticalAlignment="Top" Height="44" Width="118" Click="Button_Click"/>
