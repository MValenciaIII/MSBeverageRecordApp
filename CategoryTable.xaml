<Page x:Class="MSBeverageRecordApp.CategoryTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MSBeverageRecordApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryTable">

    <Grid>
        <Label x:Name="lblPageTitle" Content="Add a New Category" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnSubmit" Content="Submit Category" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" Height="43" Width="118" IsDefault="True" Click="btnSubmit_Click"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="268" Height="46"/>
        <Label x:Name="lblCategoryName" Content="Category Name:" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" FontSize="22"/>

    </Grid>
</Page>
